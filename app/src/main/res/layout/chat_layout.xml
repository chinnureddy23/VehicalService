<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/button_rounded_corner"
            android:backgroundTint="@color/lavender"
            android:src="@drawable/baseline_directions_car_filled_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="2dp"
            android:fontFamily="sans-serif"
            android:text="hello gpt"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_chatview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="@+id/name_layout"
        app:layout_constraintTop_toBottomOf="@+id/name_layout">

        <TextView
            android:id="@+id/top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:fontFamily="sans-serif"
            android:text="hello gpt"
            android:textColor="@color/grey"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_chatview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="@+id/top_chatview"
        app:layout_constraintTop_toBottomOf="@+id/top_chatview">

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:fontFamily="sans-serif"
            android:text="hello gpt"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>