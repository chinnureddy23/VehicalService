<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:background="@color/cardview_light_background"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:drawablePadding="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/additionalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:text="ARE YOU LOOKING FOR ?"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- First Card View -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="5dp"
                    android:foregroundGravity="center"
                    android:visibility="visible"
                    app:cardCornerRadius="160dp"
                    app:cardElevation="16dp">

                    <!-- Simple image view -->
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/carlogo" />

                </androidx.cardview.widget.CardView>

                <!-- Second Card View -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="215dp"
                    android:layout_marginTop="-150dp"

                    android:foregroundGravity="center"
                    android:visibility="visible"
                    app:cardCornerRadius="160dp"
                    app:cardElevation="16dp">

                    <!-- Simple image view -->
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bikelogo" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20sp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="194dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="105dp"
                    android:layout_marginBottom="325dp"
                    android:background="@drawable/bg"
                    android:gravity="center"
                    android:text="Fill Vechicle Details"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/vno"
                    android:layout_width="353dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="2sp"
                    android:layout_marginTop="-300sp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/lavender_border"
                    android:hint="Enter your Vechicle No"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/vtno"
                    android:layout_width="353dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="2sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/lavender_border"
                    android:hint="Two Wheeler/Four Wheeler"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/vmno"
                    android:layout_width="353dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="2sp"
                    android:layout_marginTop="24sp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="110dp"
                    android:background="@drawable/lavender_border"
                    android:hint="Vechicle Complaints"
                    android:paddingBottom="3dp"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/vbnno"
                    android:layout_width="353dp"
                    android:layout_height="51dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="2sp"
                    android:layout_marginTop="-88sp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/lavender_border"
                    android:hint="Brand of Vechicle"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/vcno"
                    android:layout_width="353dp"
                    android:layout_height="51dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="2sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="-30dp"
                    android:background="@drawable/lavender_border"
                    android:hint="Date of Vechicle Service"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:inputType="date"/>

                <EditText
                    android:id="@+id/vconno"
                    android:layout_width="353dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="2sp"
                    android:layout_marginTop="50sp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginBottom="-30dp"
                    android:autofillHints="TODO"
                    android:background="@drawable/lavender_border"
                    android:hint="Mobile No"
                    android:paddingBottom="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:inputType="phone"/>


                <Button
                    android:id="@+id/book"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="70dp"
                    android:background="@color/lavender"
                    android:text="Book a Service"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                    
                    
                    <com.denzcoskun.imageslider.ImageSlider
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/image_slider"
                        app:iss_period="1000"
                        app:iss_auto_cycle="true"
                        app:iss_delay="1000"
                        app:iss_corner_radius="20"
                        android:layout_marginTop="35dp"
                        app:iss_title_background="@drawable/gradient"/>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:id="@+id/chat_layout"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:id="@+id/customer_chat"
                        android:layout_width="600dp"
                        android:layout_height="500dp"
                        android:src="@drawable/chat"
                        android:scaleType="fitXY"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="@android:color/transparent"
                        android:textAlignment="viewEnd"
                        android:layout_marginTop="175dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="15dp"

                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Click for Live-Chat "/>
                </RelativeLayout>






            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>